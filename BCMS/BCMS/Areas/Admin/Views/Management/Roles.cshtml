

@Ajax.ActionLink("Create Role", "CreateRole", "Management", new AjaxOptions() { UpdateTargetId = "divBody", InsertionMode = InsertionMode.Replace, OnSuccess = "$('#AddRole').modal({ show: true, backdrop: true });" },new { @class="btn btn-default"})
<div id="RoleContent">
    <!--Roles Content-->
    @Html.Partial("_PartialRole")

</div>

<div id="AddRole" class="modal fade" role="dialog" dir="auto" >
    <div class="modal-dialog" style="width:700px;">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" type="button" data-dismiss="modal">&times;</button>
                <h3 class="modal-title"></h3>
            </div>
            <div class="modal-body" id="divBody">
                <!--PopUp Body-->

            </div>
            <div class="modal-footer">
                <input type="button" value="Close" class="btn btn-danger" data-dismiss="modal" />
            </div>

        </div>
    </div>
</div>

