@using BCMS.Models;
@model WiseSaying
<link href="~/Areas/Admin/css/MyStyle.css" rel="stylesheet" />
<script type="text/javascript">
    $(document).ready(function () {
        $('.ui-dialog-buttonset button').addClass('btn btn-primary12 btn-sm');
    });
</script>
<div style=" text-align: center;width:82%">
    <div class="box col-md-8" style="width:121%;text-align: center">
        <div class="box-content" style="width:100%;">

            <div class="form-group">
                <label for="exampleInputEmail1">إسم المؤلف</label>
                <input name="WiseSayingID" class="form-control" type="text" disabled="disabled" value="@Model.WiseSayingID" />
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">الحالة</label>
                <input name="StatusName" class="form-control" type="text" disabled="disabled" value="@Model.Status.StatusName" />
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">تاريخ النشر</label>
                <input name="WiseSayingDate" class="form-control" type="text" disabled="disabled" value="@Model.WiseSayingDate.Value.ToShortDateString()" />
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">المقولة</label>
                <textarea name="WiseSayingContent" class="form-control" disabled="disabled">@Model.WiseSayingContent</textarea>
            </div>
        </div>
    </div>
</div>
