@using BCMS.Models;
@model Knowledge

<script src="~/Areas/Admin/js/jquery.validate.min.js"></script>
<script src="~/Areas/Admin/js/jquery.validate.unobtrusive.js"></script>
<link href="~/Areas/Admin/css/MyStyle.css" rel="stylesheet" />
<script type="text/javascript">
    $(document).ready(function () {
       
        $("input[type='text']").removeClass("text-box single-line").addClass("form-control");
    });
</script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div style=" text-align: center;width:82%">
        <div class="box col-md-8" style="width:121%;text-align: center">
            <div class="box-content">

                @Html.HiddenFor(model => model.KnowledgeID)


                <div class="box col-md-4" style="margin-top:-10px">
                    <div class="form-group">
                        <label for="exampleInputEmail1">التخصص </label>
                        @Html.EditorFor(model => model.KnowledgeTitle)
                        @Html.ValidationMessageFor(model => model.KnowledgeTitle)
                    </div>
                </div> <!-- التخصص  -->



                <div style="margin:5px 20px 5px 5px;text-align:right">
                    <input type="button" value="إلغاء" class="btn btn-primary12 btn-sm" id="btncancel" />
                    <button class="btn btn-primary12 btn-sm" style="width:80px">حفظ</button>
                </div>
            </div>
        </div>
    </div>
}
