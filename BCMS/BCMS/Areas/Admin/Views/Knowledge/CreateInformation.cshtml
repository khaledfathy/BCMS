@using BCMS.Models;
@model Information
<script src="~/Areas/Admin/js/jquery.validate.min.js"></script>
<script src="~/Areas/Admin/js/jquery.validate.unobtrusive.js"></script>
<link href="~/Areas/Admin/css/MyStyle.css" rel="stylesheet" />
<div style=" text-align: center;width:82%">

    <div class="box col-md-8" style="width:121%;text-align: center">
        <div class="box-content" style="width:100%;">
            @using (Html.BeginForm("CreateInformation", "Knowledge", FormMethod.Post))
            {
                @Html.ValidationSummary(true)

    <input type="hidden" value="@Convert.ToInt32(ViewBag.CurrentID)" id="KnowledgeID" name="KnowledgeID" />

                <div class="form-group">
                    <label for="exampleInputEmail1">المعلومة</label>
                    <textarea id="InformationTitle" name="InformationTitle" class="form-control"></textarea>
                    @Html.ValidationMessageFor(model => model.InformationTitle)
                </div>

                <div style="margin:5px 20px 5px 5px;text-align:right">
                    <input type="submit" class="btn btn-primary12 btn-sm" style="width:80px" value="حفظ" />
                    <input type="button" value="إلغاء" class="btn btn-primary12 btn-sm" id="btnSpecificationCancel" />
                </div>
            }
        </div>
    </div>
</div>