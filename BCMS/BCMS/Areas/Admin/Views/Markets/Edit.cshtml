@using BCMS.Models;
@model Market
<script src="~/Areas/Admin/js/jquery.validate.min.js"></script>
<script src="~/Areas/Admin/js/jquery.validate.unobtrusive.js"></script>
<link href="~/Areas/Admin/css/MyStyle.css" rel="stylesheet" />

<div style=" text-align: center;width:82%">
    <div class="box col-md-8" style="width:121%;text-align: center">

        <div class="box-content" style="width:100%;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.MarketId)
                <div class="form-group">
                    <label for="exampleInputEmail1">السوق باللغة العربية</label>
                    @Html.EditorFor(model => model.MarketArName, new { @class = "StyleForDropDownList" })
                    @Html.ValidationMessageFor(model => model.MarketArName)
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">السوق باللغة الإنجليزية</label>
                    @Html.EditorFor(model => model.MarketEnName, new { @class = "StyleForDropDownList" })
                    @Html.ValidationMessageFor(model => model.MarketEnName)
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">الدولة</label>
                    @Html.DropDownListFor(model => model.CountryId, (IEnumerable<SelectListItem>)ViewBag.AllCountry, "-- إختار دولة --", new { @class = "StyleForDropDownList" })
                    @Html.ValidationMessageFor(model => model.CountryId)
                </div>

    <div class="form-group">
        <label for="exampleInputEmail1"> نوع السوق</label>
        @Html.DropDownListFor(model => model.MarketTypeId, (IEnumerable<SelectListItem>)ViewBag.AllType, "-- إختار  --", new { @class = "StyleForDropDownList" })
        @Html.ValidationMessageFor(model => model.CountryId)
    </div>
                <div class="form-group">
                    <label for="exampleInputEmail1"> سنة التأسيس</label>
                    @Html.EditorFor(model => model.EstablishedYear, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.EstablishedYear)
                </div>

                <div style="margin:5px 20px 5px 5px;text-align:right">
                    <button class="btn btn-primary12 btn-sm" style="width:80px">حفظ</button>
                    <input type="button" value="إلغاء" class="btn btn-primary12 btn-sm" id="btncancel" />
                </div>
            }
        </div>

    </div>
</div>   