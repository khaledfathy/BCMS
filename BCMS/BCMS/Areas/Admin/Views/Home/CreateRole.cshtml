
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateRole</title>
</head>
<body>
    <div style="text-align:center"><h2>Create Role</h2></div>
    <hr />
    <div>
        @using (Ajax.BeginForm("CreateRole", "Home", new AjaxOptions { UpdateTargetId = "RoleContent", InsertionMode = InsertionMode.Replace, HttpMethod = "POST", OnSuccess = "$('.close').click()" }, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                <div class="col-md-3">
                    <label class="control-label">Role Name</label>
                </div>
                <div class="col-md-6">
                    <input type="text" name="roleName" class="form-control" placeholder="Type role name" />

                </div>
                <div class="col-md-2">
                    <input type="submit" class="btn btn-primary" value="Add" />
                </div>

            </div>

        }
    </div>
</body>
</html>
