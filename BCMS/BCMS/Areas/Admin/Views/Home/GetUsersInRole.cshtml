
@using BCMS.Models
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetUsersInRole</title>
</head>
<body>
    <div>

        <table class="table table-bordered table-hover table-striped table-responsive">
            <thead>
                <tr>
                    <td colspan="5" style="text-align:center;"><h2>Users in @ViewBag.RoleName role</h2></td>
                </tr>
                <tr>
                    <th>First Name</th>
                    <th>Middle Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>User Status</th>
                </tr>
            </thead>
            <tbody style="max-height:700px; overflow-y:auto;">
                @foreach (ApplicationUser user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.MiddleName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.UserStatus</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</body>
</html>
