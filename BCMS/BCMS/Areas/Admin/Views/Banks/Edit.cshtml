@using BCMS.Models;
@model Bank
<script src="~/Areas/Admin/js/jquery.validate.min.js"></script>
<script src="~/Areas/Admin/js/jquery.validate.unobtrusive.js"></script>
<link href="~/Areas/Admin/css/MyStyle.css" rel="stylesheet" />
<script type="text/javascript">
    $(document).ready(function () {
        $("input[type='text']").removeClass("text-box single-line").addClass("form-control");
    });
</script>
<div style=" text-align: center;width:82%">
    <div class="box col-md-8" style="width:121%;text-align: center">

        <div class="box-content" style="width:100%;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                @Html.HiddenFor(model => model.BankId)

                <div class="form-group">
                    <label for="exampleInputEmail1">البنك باللغة العربية</label>
                    @Html.EditorFor(model => model.BankArName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.BankArName)
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">البنك باللغة الإنجليزية</label>
                    @Html.EditorFor(model => model.BankEnName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.BankEnName)
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">كود البنك</label>
                    @Html.EditorFor(model => model.BankCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.BankCode)
                </div>

                <div style="margin:5px 20px 5px 5px;text-align:right">
                    <button class="btn btn-primary12 btn-sm" style="width:80px">حفظ</button>
                    <input type="button" value="إلغاء" class="btn btn-primary12 btn-sm" id="btncancel" />
                </div>
            }
        </div>

    </div>
</div>
