@using System.Web.Optimization
<!doctype html>
<html ng-app="langApp" dir="rtl" lang="ar" >
<head>
    @*<base href="/" />*@
    <title></title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @if (Request.Cookies["language"] != null)
    {
        var lang = Request.Cookies["language"].Value;
        if (lang == "en")
        {
            @Styles.Render("~/bundles/BCMS/style/en")
        }
        else
        {
            @Styles.Render("~/bundles/BCMS/style/ar")
        }
    }
    else
    {
        @Styles.Render("~/bundles/BCMS/style/ar")
    }
    <link href="~/Content/loading-bar.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/BCMS/script")
    
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/angular-animate.min.js"></script>
    <script src="~/Scripts/loading-bar.js"></script>
</head>

<body>
    <!-- Start Header-->
    @{Html.RenderPartial("_HeaderPartial");}
    <!--End Header-->
    <div style="min-height:460px;">
        <div class="large-12 columns">
            <div class="large-12 column" id="body">

                <!--START CONTENT-->

                @RenderBody()

                <!--END CONTENT-->

            </div>
        </div>
    </div>
    <div class="clear"></div>

    <!-- Start Footer-->
    @{Html.RenderPartial("_FooterPartial");}
    <!--End Footer-->

</body>
</html>

