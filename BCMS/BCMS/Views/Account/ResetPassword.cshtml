@*@model BCMS.Models.ResetPasswordViewModel*@
@{
    ViewBag.Title = "إعادة تعيين كلمة المرور";
    string code = ViewBag.code;
    //Layout = null;
}

@*<link href="~/Materials/Ar/css/alerts/normalize.min.css" rel="stylesheet" />
<link href="~/Materials/Ar/css/alerts/alertify.rtl.min.css" rel="stylesheet" />
<link href="~/Materials/Ar/css/alerts/themes/default.min.css" rel="stylesheet" />*@
<script src="~/Materials/Ar/js/alertify.min.js"></script>
<script src="~/Materials/Ar/js/spin.min.js"></script>
<div class="row" ng-controller="ResetpasswordController">
    <!--START OUR CLIENTS-->
    <div class="large-2 column Adv">
        <div style="padding: 15px 0 10px 0;">
            <h3>الرعاه الرسميون</h3>

            <div style="max-height: 250px;overflow: hidden">
                <ul class="rslides">
                    <li>
                        <div class="img100"><img src="~/Materials/Ar/Images/Sponsers/masi.png" /></div>
                        <h4>الراعي الماسي</h4>
                    </li>
                    <li>
                        <div class="img100"><img src="~/Materials/Ar/Images/Sponsers/gold.png" /></div>
                        <h4>الراعي الذهبي</h4>
                    </li>
                    <li>
                        <div class="img100"><img src="~/Materials/Ar/Images/Sponsers/plat.png" /></div>
                        <h4>الراعي البلاتيني</h4>
                    </li>
                    <li>
                        <div class="img100"><img src="~/Materials/Ar/Images/Sponsers/silver.png" /></div>
                        <h4>الراعي الفضي</h4>
                    </li>
                </ul>
            </div>
            <script>
    $(function () {
        $(".rslides").responsiveSlides();
    });
            </script>

        </div>
    </div>
    <!--END OUR CLIENTS-->
    <div class="large-10 column">
        <div class="RegisterWrapper">
            <h1 class="Spec InnerPage">
                إعادة تعيين كلمة المرور
                <div class="left"><img src="../Materials/Ar/images/Grid/Lock.png" /></div>
            </h1>
            <div class="H10"></div>

            <!--START TABLE-->
            <form name="ResetPasswordForm" ng-submit="ResetPasswordForm.$valid && Send()" novalidate ng-show="!submitted">
                @*@Html.HiddenFor(model => model.Code)*@
                <input type="hidden"  ng-model="user.Code" name="Code" id="code" value="@code" />
                <div class="">
                    <div class="large-8 columns">
                        <div class="large-3 columns">
                            <label>البريد الالكتروني</label>
                        </div>
                        <div class="large-9 columns">
                            <label>
                                <input type="email" ng-model="user.Email" name="email" id="email" placeholder="البريد الالكتروني" required />
                            </label>
                        </div>
                        <div class="large-2 columns">
                            <label>
                                <span class="error" ng-show="ResetPasswordForm.email.$error.email">البريد الإلكترونى غير صحيح</span>
                            </label>
                        </div>
                    </div>
                    <div class="large-8 columns">
                        <div class="large-3 columns">
                            <label>كلمة المرور الجديده</label>
                        </div>
                        <div class="large-9 columns">
                            <label>
                                <input type="password" ng-model="user.Password" placeholder="كلمة المرور الجديدة" required />
                            </label>
                        </div>
                    </div>
                    <div class="large-8 columns">
                        <div class="large-3 columns">
                            <label>تاكيد كلمة المرور الجديده</label>
                        </div>
                        <div class="large-9 columns">
                            <label>
                                <input type="password" ng-model="user.ConfirmPassword" compare-to="user.Password" placeholder="تأكيد كلمة المرور الجديدة" required />
                            </label>
                        </div>
                    </div>
                    <div class="large-8 columns">
                        <div class="large-3 columns">&nbsp;</div>
                        <div class="large-9 columns">
                            <button type="submit" class="button radius">إرسال</button>
                        </div>
                    </div>
                </div>
            </form>

            <div ng-show="submitted">
                <h2 id="feedback"></h2>
            </div>

            <div id="loadingArea" ng-show="loading"></div>
            <div class="clear"></div>

        </div>
    </div>
</div>










